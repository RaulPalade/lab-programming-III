<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/15.0.1"
      fx:controller="client.LoginController">
    <children>
        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../img/Login.png"/>
            </image>
        </ImageView>

        <GridPane prefHeight="100.0" prefWidth="362.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="193.5999755859375" minWidth="10.0"
                                   prefWidth="111.20001220703125"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="288.79998779296875" minWidth="10.0"
                                   prefWidth="288.79998779296875"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="Email:">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <Label text="Password:" GridPane.rowIndex="1">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="email" onMouseClicked="#clear" prefHeight="40.0" GridPane.columnIndex="1"/>
                <TextField fx:id="password" onMouseClicked="#clear" accessibleRole="PASSWORD_FIELD" prefHeight="40.0"
                           GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            </children>
            <VBox.margin>
                <Insets left="20.0" right="20.0"/>
            </VBox.margin>
        </GridPane>
        <Button mnemonicParsing="false" fx:id="login" onAction="#login" prefHeight="45.0" prefWidth="362.0"
                text="LOGIN">
            <VBox.margin>
                <Insets top="30.0"/>
            </VBox.margin>
        </Button>
        <Label fx:id="errore" alignment="CENTER" prefHeight="50.0" prefWidth="360.0">
            <font>
                <Font size="14.0"/>
            </font>
            <VBox.margin>
                <Insets left="20.0" right="20.0" top="20.0"/>
            </VBox.margin>
        </Label>
        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
            <VBox.margin>
                <Insets top="40.0"/>
            </VBox.margin>
            <image>
                <Image url="@../img/PEC.png"/>
            </image>
        </ImageView>

    </children>
</VBox>
