<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity"
      prefHeight="610.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/15.0.1"
      fx:controller="client.EmailClientController">
    <children>
        <GridPane alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES"/>
            </rowConstraints>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
            <children>
                <Label fx:id="email" text="Email"/>
                <Label fx:id="statoServer" text="Server status" GridPane.columnIndex="1"/>
                <Button fx:id="logout" mnemonicParsing="false" onAction="#logout" prefHeight="30.0" prefWidth="80.0"
                        text="LOGOUT" GridPane.columnIndex="2"/>
            </children>
        </GridPane>
        <HBox fx:id="centerHBox" alignment="CENTER_LEFT" prefHeight="43.0" prefWidth="900.0">
            <children>
                <Button fx:id="aggiorna" mnemonicParsing="false" onAction="#aggiornaListaEmail" prefHeight="35.0"
                        prefWidth="135.0" text="AGGIORNA">
                    <HBox.margin>
                        <Insets left="10.0" right="10.0"/>
                    </HBox.margin>
                </Button>
                <Button fx:id="elimina" mnemonicParsing="false" onAction="#eliminaEmail" prefHeight="35.0"
                        prefWidth="135.0" text="ELIMINA">
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </Button>
                <Button fx:id="nuovaEmail" mnemonicParsing="false" onAction="#scriviNuovaEmail" prefHeight="35.0"
                        prefWidth="579.0" text="NUOVA EMAIL" textAlignment="RIGHT">
                    <HBox.margin>
                        <Insets left="20.0" right="10.0"/>
                    </HBox.margin>
                </Button>
            </children>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
        </HBox>
        <HBox fx:id="bottomHBox" prefHeight="500.0" prefWidth="900.0">
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
            <children>
                <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
                    <tabs>
                        <Tab fx:id="postaInArrivo" text="Posta in Arrivo">
                            <content>
                                <ListView fx:id="listaEmailRicevute" onMouseClicked="#loadReadEmailWindow"
                                          prefHeight="500.0" prefWidth="300.0"/>
                            </content>
                        </Tab>
                        <Tab fx:id="postaInviata" text="Posta Inviata">
                            <content>
                                <ListView fx:id="listaEmailInviate" prefHeight="500.0" prefWidth="300.0"/>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
                <StackPane fx:id="pannelloVuoto" prefHeight="500.0" prefWidth="600.0"/>
            </children>
        </HBox>
    </children>
</VBox>
