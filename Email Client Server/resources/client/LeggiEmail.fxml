<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/15.0.1"
           fx:controller="client.LeggiEmailController">
    <children>
        <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0"
              prefWidth="600.0">
            <children>
                <HBox prefHeight="50.0" prefWidth="200.0">
                    <children>
                        <Button fx:id="elimina" mnemonicParsing="false" onAction="#eliminaEmail" prefHeight="35.0"
                                prefWidth="120.0" text="ELIMINA">
                            <HBox.margin>
                                <Insets left="24.0"/>
                            </HBox.margin>
                        </Button>
                        <Button fx:id="rispondi" mnemonicParsing="false" onAction="#rispondiEmail" prefHeight="35.0"
                                prefWidth="120.0" text="RISPONDI">
                            <HBox.margin>
                                <Insets left="24.0"/>
                            </HBox.margin>
                        </Button>
                        <Button fx:id="rispondiATutti" mnemonicParsing="false" onAction="#rispondiEmailATutti"
                                prefHeight="35.0" prefWidth="120.0" text="RISPONDI A TUTTI">
                            <HBox.margin>
                                <Insets left="24.0"/>
                            </HBox.margin>
                        </Button>
                        <Button fx:id="inoltra" mnemonicParsing="false" onAction="#inoltraEmail" prefHeight="35.0"
                                prefWidth="120.0" text="INOLTRA">
                            <HBox.margin>
                                <Insets left="24.0"/>
                            </HBox.margin>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </HBox>
                <HBox prefHeight="35.0" prefWidth="200.0">
                    <children>
                        <Label alignment="CENTER_RIGHT" contentDisplay="CENTER" prefHeight="35.0" prefWidth="85.0"
                               text="Mittente:">
                            <font>
                                <Font size="13.0"/>
                            </font>
                            <padding>
                                <Insets left="10.0"/>
                            </padding>
                            <HBox.margin>
                                <Insets right="10.0"/>
                            </HBox.margin>
                        </Label>
                        <Label fx:id="mittente" prefHeight="44.0" prefWidth="495.0">
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                        </Label>
                    </children>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </HBox>
                <HBox prefHeight="35.0" prefWidth="200.0">
                    <children>
                        <Label alignment="CENTER_RIGHT" contentDisplay="CENTER" prefHeight="35.0" prefWidth="85.0"
                               text="Oggetto:">
                            <font>
                                <Font size="13.0"/>
                            </font>
                            <padding>
                                <Insets left="10.0"/>
                            </padding>
                            <HBox.margin>
                                <Insets right="10.0"/>
                            </HBox.margin>
                        </Label>
                        <Label fx:id="oggetto" prefHeight="44.0" prefWidth="495.0"/>
                    </children>
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </HBox>
                <Label fx:id="testoEmail" alignment="TOP_LEFT" prefHeight="350.0" prefWidth="600.0">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </Label>
            </children>
        </VBox>
    </children>
</StackPane>
