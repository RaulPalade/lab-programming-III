<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/15.0.1"
      fx:controller="server.EmailServerController">
   <children>
      <Label prefHeight="18.0" prefWidth="82.0" text="LOG">
         <VBox.margin>
            <Insets left="10.0" top="10.0"/>
         </VBox.margin>
      </Label>
      <TextArea fx:id="log" prefHeight="500.0" prefWidth="879.0">
         <VBox.margin>
            <Insets left="10.0" right="10.0" top="10.0"/>
         </VBox.margin>
      </TextArea>
      <HBox alignment="CENTER" prefHeight="60.0" prefWidth="200.0">
         <children>
            <Button fx:id="spegni" mnemonicParsing="false" onAction="#spegniServer" prefHeight="30.0" prefWidth="120.0"
                    text="SPEGNI SERVER">
               <HBox.margin>
                  <Insets right="10.0"/>
               </HBox.margin>
               <font>
                  <Font size="13.0"/>
               </font>
            </Button>
            <Button fx:id="avvia" mnemonicParsing="false" onAction="#avviaServer" prefHeight="30.0" prefWidth="120.0"
                    text="AVVIA SERVER">
               <HBox.margin>
                  <Insets left="10.0"/>
               </HBox.margin>
               <font>
                  <Font size="13.0"/>
               </font>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
         </VBox.margin>
      </HBox>
   </children>
</VBox>
